<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity" android:weightSum="1">



    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Özet"
            android:id="@+id/summary_file" android:layout_gravity="bottom" android:layout_weight="1.00"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dosya oluştur"
            android:id="@+id/create_button" android:layout_gravity="bottom" android:layout_weight="1.00"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dosya yaz"
            android:id="@+id/write_button" android:layout_gravity="bottom" android:layout_weight="1.00"/>
</LinearLayout>